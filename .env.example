# Environment Configuration for AI Health Assistant

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-password
MYSQL_DATABASE=health_assistant

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256

# FastAPI Configuration
FASTAPI_DEBUG=True
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Frontend Configuration
FRONTEND_URL=http://localhost:8080
API_BACKEND_URL=http://localhost:5000

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Kaggle API (for dataset downloads)
KAGGLE_API_KEY=your-kaggle-api-key

# AI Model Paths
MODEL_PATH=ml_models/pretrained

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cloud Deployment
CLOUD_PROVIDER=aws  # aws, gcp, azure
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
